# Maintainer: Fabian Kl√∂tzl <fabian-aur@kloetzl.info>
pkgname=pfasta-git
pkgver=12.r16.g88fc8f8
pkgrel=2
pkgdesc="a pedantic FASTA parser"
url="https://github.com/kloetzl/pfasta"
license=("ICS")
arch=("x86_64")
makedepends=('git')
provides=(${pkgname%-*}=$pkgver)
source=("pfasta-git::git+https://github.com/kloetzl/pfasta.git")
sha256sums=('SKIP')

pkgver() {
	cd "$pkgname"
	git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g' | cut -c2-
}

build() {
	cd "$pkgname"
	make
}

package() {
	cd "$pkgname"
	mkdir -p "${pkgdir}/usr"
	make "PREFIX=${pkgdir}/usr" install
}
