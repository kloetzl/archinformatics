prepare() {
	# patch this thing
	cd "INDELibleV${pkgver}/"
	for p in ../*.patch; do
		patch -N -p1 -i ../$p
	done
}

build() {
	cd "INDELibleV${pkgver}/"
	autoreconf -fi
	./configure
	make
}

package() {
	mkdir -p "${pkgdir}/usr/"{bin,share}
	cd "INDELibleV${pkgver}/"
	make prefix="${pkgdir}/usr/" install
}
